import sys
import os

# Find where we are, and then go up and over to get the alembic module
# This basically enforces that Alembic is installed properly, and also
# prevents weird PYTHONPATH mistakes from clobbering Alembic's internal
# consistency
__relativeLibPath = os.path.join( os.pardir, "lib", "python" )
__alembicPath = os.path.join( os.path.dirname(__file__), __relativeLibPath )
sys.path.insert( 0, __alembicPath )

try:
    import alembic
    import alembic.dispatch
except ImportError:
    sys.stderr.write( "ERROR: Couldn't import alembic libraries in [%s]\n" %
                      ' '.join(sys.path))
    sys.stderr.write( "(check Alembic installation)\n" )
    sys.exit( -1 )

#-******************************************************************************
# Main Function
def main():
    """
The Alembic Top Level Command.
It just funnels information into alembic.dispatch via sys.argv
    """
    dsp = alembic.dispatch.Dispatch()
    dsp.run()

    return 0

##-*****************************************************************************
if __name__ == "__main__":
    sys.exit( main() )


